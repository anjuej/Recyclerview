<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="productsbinding"
            type="com.example.mvvmorderitem.ProductModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text= "@{productsbinding.productcount+``}"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/itemname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/count"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="jhgshfhfvhgfhgfgh"
        android:layout_marginTop="12dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="16dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="@{productsbinding.productname}"/>
    <TextView
        android:id="@+id/itemrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/itemname"
        android:layout_marginStart="47dp"
      app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="4dp"
        tools:text="jhgsfgfdgd"
        android:layout_marginBottom="10dp"
        android:text="@{productsbinding.productprice+``}"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
       app:layout_constraintStart_toEndOf="@id/itemrate"
        app:layout_constraintTop_toBottomOf="@id/itemname"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="jhgshfhfvhgfhgfgh"
        android:layout_marginTop="4dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="10dp"
        android:text="@{productsbinding.productsize}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>